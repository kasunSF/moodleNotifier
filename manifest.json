{
  "manifest_version": 2,
  "name": "Moodle Notifier",
  "version": "1.0",
  "description": "Chrome extension for fetching notifications from moodle",
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png",
    "16": "img/icon16.png"
  },
  
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_title": "Moodle Notifier",
    "default_popup": "popup.html"
  },
  
  "background": {
    "page": "background.html"
  },
  
  "content_scripts": [
    {
      "matches": ["http://www.google.com/*"],
      "css": ["mystyles.css"],
      "js": ["js/option.js", "js/option2.js"]
    }
  ],
  
  "options_page": "options.html",
  
  "permissions": [
	"contentSettings", "notifications", "tabs", "http://localhost/moodle/"
  ]
}