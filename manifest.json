{
    "manifest_version": 2,
    "name": "Moodle Notifier",
    "version": "1.0",
    "description": "Get desktop notifications from Moodle for assignments, quizzes and forum posts.",
    "icons": {
        "48": "img/icon48.png",
        "inactive": "img/icon_inactive.png",
        "active": "img/icon_active.png",
        "16": "img/icon16.png"
    },

    "browser_action": {
        "default_icon": "/img/icon_inactive.png",
        "default_title": "Moodle Notifier",
        "default_popup": "popup.html"
    },

    "background": {
        "page": "background.html"
    },

    "options_page": "options.html",

    "permissions": [
        "notifications", "tabs", "storage", "http://*/*", "https://*/*"
    ]

}