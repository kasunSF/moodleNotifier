{
    "manifest_version": 2,
    "name": "SiteCat",
    "version": "1.0",
    "description": "Get intelligent suggestions for the current site reference",
    "icons": {
        "48": "img/logo.png",
        "inactive": "img/logo.png",
        "active": "img/logo.png",
        "16": "img/logo.png"
    },

    "browser_action": {
        "default_icon": "/img/logo.png",
        "default_title": "Site Categorizer",
        "default_popup": "popup.html"
    },


    "permissions": [
        "notifications", "tabs", "storage", "http://*/*", "https://*/*"
    ]

}